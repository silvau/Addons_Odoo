<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="report_invoice_mx_style" inherit_id="report.layout">
            <xpath expr="//head" position="inside">
                <style>
                    body{font-family: 'Open Sans', sans-serif;font-size: 14px;line-height: 28px;font-weight: 400;color: #414141;background-color: #fff;overflow-x: hidden;-webkit-text-size-adjust: 100%;-webkit-overflow-scrolling: touch;-webkit-font-smoothing: antialiased !important;}
                </style>
            </xpath>
        </template>


        <template id="report_invoice_mx">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="cfd_mx.report_invoice_mx_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="report_invoice_mx_document">
            <t t-call="report.html_container">
                <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                <div class="page">
                    <div class="oe_structure"/>
                    <t t-set="Title1" t-value="'color:#000000 !important; text-align:center; font-size:11px; font-weight:bold; background-color:#f0f0f0 !important; border:1px solid #333 !important; '"/>
                    <t t-set="Title2" t-value="'color:#000000 !important; text-align:left; font-size:11px; font-weight:bold; background-color:#f0f0f0 !important; border:1px solid #333 !important; '"/>
                    <t t-set="Title3" t-value="'color:#000000 !important; text-align:left; font-size:11px; font-weight:normal; background-color:#FFFFFF !important; border:1px solid #333 !important; '"/>
                    <t t-set="Address" t-value="'color:#000000 !important; text-align:center; font-size:10px; font-weight:normal; background-color:#FFFFFF !important; '"/>
                    <t t-set="Address_Company" t-value="'color:#333 !important; text-align:center; font-size:12px; font-weight:bold; background-color:#FFFFFF !important; '"/>
                    <t t-set="Images" t-value="'max-height:104px !important; max-width:104px !important; width:104px !important; height:104px !important; '"/>
                    <t t-set="Panel_Header"  t-value="'color:#000000 !important; text-align:left; font-size:10px; font-weight:normal; background-color:#f0f0f0 !important; border-color: #333 !important; padding-left:5 !important; padding-right:0 !important; padding-top:5 !important; padding-bottom:0 !important;'"/>
                    <t t-set="Panel" t-value="'color:#000000 !important; text-align:left; font-size:10px; font-weight:normal; background-color:#FFFFFF !important; border-color: #333 !important; padding-left:5 !important; padding-right:0 !important; padding-top:5 !important; padding-bottom:0 !important;'"/>

                    <div class="row">
                        <div class="col-xs-3 text-center">
                            <div style="text-align:center;">
                                <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo" class="img img-responsive" style="max-height:104px;"  />
                            </div>
                        </div>
                        <div class="col-xs-6 text-center">
                            <address t-att-style="Address">
                                <spam t-field="o.company_id.partner_id.name" t-att-style="Address_Company" /><br />
                                <spam t-field="o.company_id.partner_id.vat"  /><br />
                                <spam t-field="o.company_id.partner_id.street"/>
                                <spam t-field="o.company_id.partner_id.noExterior"/><br />
                                <spam t-field="o.company_id.partner_id.street2"/><br />
                                <spam t-field="o.company_id.partner_id.city"/>
                                <spam t-field="o.company_id.partner_id.zip"/><br />
                                <spam t-field="o.company_id.partner_id.state_id.name"/><br />
                                <spam t-field="o.company_id.partner_id.country_id.name"/><br />
                            </address>
                        </div>
                        <div class="col-xs-3">
                            <img t-if="o.qrcode" t-att-src="'data:image/png;base64,%s' % o.qrcode" style="width:140px!important;height:140px!important;"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <p style="font-size:10px ">
                                <spam t-field="o.journal_id.lugar"/>
                            </p>
                        </div>
                    </div>
                    <div class="row"  >
                        <div class="col-xs-8">
                            <div class="panel" style="border-color: #333 !important;">
                                <div class="panel-heading" t-att-style="Panel_Header" >
                                    <p style="color:#E0FFFF !important; text-align:center; font-size:12px; font-weight:bold; color:#333 !important; ">
                                        <spam >Comprobante de : </spam>
                                        <spam t-if="o.type == 'out_invoice' ">Ingreso</spam>
                                        <spam t-if="o.type == 'out_refund'">Egreso</spam>
                                    </p>
                                </div>
                                <div class="panel-body" t-att-style="Panel" >
                                    <p style="color:#E0FFFF !important; text-align:left; font-size:12px; font-weight:bold; color:#333 !important; ">
                                        Facturado A: <spam t-field="o.partner_id.name"/>
                                    </p>
                                    <address class="address">
                                        <div t-if="o.partner_id.ref" class="vat">
                                            <spam style="font-weight:bold;"> Numero de Cliente: </spam>
                                            <spam t-field="o.partner_id.ref"/>
                                        </div>
                                        <div t-if="o.partner_id.vat" class="vat">
                                            <spam style="font-weight:bold;"> RFC: </spam>
                                            <spam t-field="o.partner_id.vat"/>
                                        </div>
                                        <div class="vat">
                                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                                            <spam style="font-weight:bold;"> Dirección: </spam>
                                        </div>
                                        <div t-if="o.partner_id.street">
                                            <spam style="font-size:11px; color:#FFFFFF !important; ">....</spam>
                                            <spam t-field="o.partner_id.street" /> <spam t-field="o.partner_id.noExterior"/><br />
                                        </div>
                                        <div t-if="o.partner_id.street2">
                                            <spam style="font-size:11px; color:#FFFFFF !important; ">....</spam>
                                            <spam>Colonia: </spam><spam t-field="o.partner_id.street2"/> 
                                        </div>
                                        <div>
                                            <spam style="font-size:11px; color:#FFFFFF !important; ">....</spam>
                                            <spam t-field="o.partner_id.city"/>, 
                                            <spam t-field="o.partner_id.state_id.name"/>, 
                                            <spam t-field="o.partner_id.country_id.name"/>
                                        </div>
                                        <div t-if="o.partner_id.zip">
                                            <spam style="font-size:11px; color:#FFFFFF !important; ">....</spam>
                                            <spam>C.P: </spam><spam t-field="o.partner_id.zip"/>
                                        </div>
                                    </address>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="panel"  style="border-color: #333 !important;">
                                <div class="panel-heading" t-att-style="Panel_Header">
                                    <p style="text-align:center; font-size:12px; font-weight:bold; color:#333 !important; ">
                                        <spam> Folio : </spam><spam style="color:#2989E1 !important;" t-field="o.number" />
                                    </p>
                                </div>
                                <div class="panel-body" t-att-style="Panel" >
                                    <p style="font-size:10px ">
                                        <strong>Fecha:</strong> <spam t-field="o.date_invoice"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <table class="table table-condensed table-bordered" style="font-size:10px;">
                        <tr>
                            <td t-att-style="Title2" colspan="2" ><strong>Origen:</strong></td>
                            <td t-att-style="Title3" colspan="2"><spam t-field="o.origin"/></td>
                            <td t-att-style="Title2"><strong>Vendedor:</strong></td>
                            <td t-att-style="Title3"><spam t-field="o.user_id.name"/></td>
                            <td t-att-style="Title2"><strong>Descripcion:</strong></td>
                            <td t-att-style="Title3"><spam t-field="o.name"/></td>
                        </tr>
                        <t t-if="o.currency_id.name != 'MXN'">
                            <tr>
                                <td t-att-style="Title2"><strong>Moneda:</strong></td>
                                <td t-att-style="Title3"><spam t-field="o.currency_id.name"/></td>
                                <td t-att-style="Title2"><strong>Tipo de Cambio:</strong></td>
                                <td t-att-style="Title3"><span t-esc="tipo_cambio[o.id]" /></td>
                                <td t-att-style="Title2"><strong>Metodo de Pago:</strong></td>
                                <td t-att-style="Title3"><span t-field="o.formapago_id.clave"/> <span t-field="o.formapago_id.name"/></td>
                                <td t-att-style="Title2"><strong>Plazo de Pago:</strong></td>
                                <td t-att-style="Title3"><spam t-field="o.payment_term_id.name"/></td>
                            </tr>
                        </t>
                        <t t-if="not o.currency_id.name != 'MXN'">
                            <tr>
                                <td t-att-style="Title2" colspan="2" ><strong>Moneda:</strong></td>
                                <td t-att-style="Title3" colspan="2" ><spam t-field="o.currency_id.name"/></td>
                                <td t-att-style="Title2"><strong>Metodo de Pago:</strong></td>
                                <td t-att-style="Title3"><span t-field="o.formapago_id.clave"/> <span t-field="o.formapago_id.name"/></td>
                                <td t-att-style="Title2"><strong>Plazo de Pago:</strong></td>
                                <td t-att-style="Title3"><spam t-field="o.payment_term_id.name"/></td>
                            </tr>
                        </t>
                    </table>

                    <table class="table table-condensed" style="font-size:10px;">
                        <thead>
                            <tr class="panel-primary">
                                <td t-att-style="Title1"><strong>Concepto:</strong></td>
                                <td t-att-style="Title1"><strong>Cantidad:</strong></td>
                                <td t-att-style="Title1"><strong>Valor Unitario:</strong></td>
                                <td t-att-style="Title1"><strong>Importe:</strong></td>
                            </tr>
                        </thead>
                        <tbody >
                            <tr t-foreach="o.invoice_line_ids" t-as="l">
                                <td class="text-left" t-att-style="Title3">
                                    <span t-field="l.name"/>
                                </td>
                                <td class="text-right" t-att-style="Title3">
                                    <span t-field="l.quantity"/>
                                    <span t-field="l.uom_id"  groups="product.group_uom"/>
                                </td>
                                <td class="text-right" t-att-style="Title3">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td class="text-right" t-att-style="Title3">
                                    <span t-field="l.price_subtotal" 
                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" t-att-style="Title3">
                                    <strong>Cantidad con Letra:</strong> <br />
                                    <span t-field="o.cantLetra"/>
                                </td>
                                <td t-att-style="Title3">
                                    <table>
                                        <tr>
                                            <td class="text-left"> <strong>Sub-total: </strong> </td>
                                            <td class="text-right"> <span t-field="o.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/> </td>
                                        </tr>
                                        <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                            <tr>
                                                <td class="text-left"> <strong t-esc="amount_by_group[0]" />: </td>
                                                <td class="text-right"> <span t-esc="amount_by_group[1]"/></td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td class="text-left"> <strong>Total: </strong> </td>
                                            <td class="text-right"> <span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/> </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <p style="font-size:10px ">
                        <strong>Este Documento es una Representación Impresa de un CFDI.</strong>                        
                    </p>
                    <t t-if="o.comment">
                        <div class="panel panel-primary" style="border-color: #333 !important;">
                            <div class="panel-heading" t-att-style="Panel_Header" >
                                <p style="font-size:10px; font-weight: bold; ">
                                    NOTAS:
                                </p>
                            </div>
                            <div class="panel-body" t-att-style="Panel" >
                                <p style="font-size:10px ">
                                    <spam t-field="o.comment"/>
                                </p>
                            </div>
                        </div>
                    </t>
                    <t t-if="o.uuid">
                        <div class="panel" style="border-color: #333 !important;">
                            <div class="panel-body" t-att-style="Panel" >
                                <p style="font-size:10px ">
                                    <strong>Cadena Original:</strong> <spam t-field="o.cadena"/> <br />
                                    <strong>Sello Digital Del SAT:</strong> <spam t-field="o.sello"/>
                                </p>
                            </div>
                        </div>
                        <div style="font-size:10px ">
                            <hr />
                            <strong>Forma de Pago: </strong> <span t-field="o.tipopago_id"/> <br />
                            <strong>Metodo de Pago: </strong> <span t-field="o.formapago_id.clave"/> <span t-field="o.formapago_id"/> <br />
                            <strong>Número de Cuenta de Pago: </strong> <span t-field="o.cuentaBanco"/> <br />
                            <strong>Emisor: </strong> <span t-field="o.company_id.partner_id.name"/> <br />
                            <strong>Régimen Fiscal: </strong> <span t-field="o.company_id.partner_id.regimen_id.name"/> <br />
                            <strong>Número de Serie del Certificado del Emisor: </strong> <span t-field="o.noCertificado"/> <br />                            
                            <strong>Folio Fiscal: </strong> <span t-field="o.uuid"/> <br />
                            <strong>CDFI Timbrado por: </strong> <span t-field="o.company_id.cfd_mx_pac"/> <br />
                        </div>
                    </t>
                    <div class="oe_structure"/>

                </div>
            </t>
        </template>

    </data>
</openerp>


